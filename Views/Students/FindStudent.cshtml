@model FindStudent

@{
    ViewData["Title"] = "FindStudent";
}
<form method="post">
    <div class="form-group">
        <label asp-for="studentName"></label>
        <input asp-for="studentName" class="form-control" />
    </div>

    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<hr />
<h3>Search Result</h3>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                Name
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>

        </tr>
    </thead>
    <tbody>
        @if (Model.Students is null || Model.Students.Count() == 0)
        {
            <tr>
                <td>
                    No Students Founds
                </td>
            </tr>
        }
        else
            foreach (var item in Model.Students)
            {

                <tr  style="width:100px; height:100px; text-align:center">
                  <td>
                      <img src="@Url.Content("~/Images/"+item.imagePath)" style=" width: 100px; height: 100px; border-radius: 40%;" />
                  </td>
                    <td>
                        @item.studentName
                    </td>
                    <td>
                        @item.phone
                    </td>
                    <td>
                        @item.email
                    </td>
                    



                </tr>
            }
    </tbody>
</table>
